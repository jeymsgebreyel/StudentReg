@{
}

<body>
    <div>
        <form method="post">
            <div class="row">
                <label>First Name</label>
                <input asp-for="NewStudent.FirstName" type="text"/>
            </div>

            <div class="row">
                <label>Last Name</label>
                <input asp-for="NewStudent.LastName" type="text"/>
            </div>

            <div class="row">
                <label>Course</label>
                <input asp-for="NewStudent.Course" type="text"/>
            </div>

            <div class="row">
                <label>Year Level</label>
                <select asp-for="NewStudent.YearLevel">
                    <option value="1">1st Year</option>
                    <option value="2">2nd Year</option>
                    <option value="3">3rd Year</option>
                    <option value="4">4th Year</option>
                </select>
            </div>

            <input type="submit" value="Register" />
        </form>
    </div>
</body>
